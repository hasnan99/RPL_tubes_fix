<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7CC644"
    tools:context=".detail_produk">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="411dp"
        android:layout_height="656dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/custom_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_rectangle">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="141dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="140dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_below="@id/imageView3"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Nama Sayur"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="162dp"
                android:layout_height="38dp"
                android:layout_below="@id/imageView3"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="39dp"
                android:layout_toRightOf="@id/textView17"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="164dp"
                android:layout_height="41dp"
                android:layout_below="@id/textView21"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Stock Sayur"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="168dp"
                android:layout_height="53dp"
                android:layout_below="@id/textView19"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Deskripsi Sayur"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="162dp"
                android:layout_height="38dp"
                android:layout_below="@id/textView17"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Harga Sayur"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="159dp"
                android:layout_height="37dp"
                android:layout_below="@id/textView17"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="39dp"
                android:layout_toRightOf="@id/textView21"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="166dp"
                android:layout_height="43dp"
                android:layout_below="@id/textView21"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="28dp"
                android:layout_toRightOf="@id/textView19"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:layout_below="@id/textView23"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_toRightOf="@id/textView20"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <ImageView
                android:id="@+id/tambah"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@id/textView20"
                android:layout_marginStart="61dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="21dp"
                android:tint="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/quantity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20"
                app:srcCompat="@drawable/ic_baseline_add_24" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView20"
                android:layout_marginStart="44dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="53dp"
                android:layout_toRightOf="@id/tambah"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintEnd_toStartOf="@+id/kurang"
                app:layout_constraintStart_toEndOf="@+id/tambah"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <ImageView
                android:id="@+id/kurang"
                android:layout_width="57dp"
                android:layout_height="54dp"
                android:layout_below="@id/textView20"
                android:layout_marginStart="100dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="101dp"
                android:layout_toRightOf="@+id/tambah"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/quantity"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:srcCompat="@drawable/ic_baseline_horizontal_rule_24" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button3"
        android:layout_width="172dp"
        android:layout_height="61dp"
        android:text="Masukkan ke keranjang"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>